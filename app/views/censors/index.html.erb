<h1 class="text-center">通告审查</h1>

<table class="table table-bordered table-hover">
  <tr class="text-info">
    <th>标题</th>
    <th>部门</th>
    <th>审核状态</th>
    <th>修正</th>
    <th>操作</th>
  </tr>
  <% @censor_notices.each do |f| %>
    <tr>
      <td><%= link_to "#{f.title }", new_censor_path(f) %></td>
      <td><%= f.notice_item.department %></td>
      <td><%= "#{f.inspection}" %></td>
      <td><%= "(#{f.modify_number})" %></td>
      <td>
        <%= link_to "审核", new_censor_path(f) %>
      </td>
    </tr>
  <% end %>
</table>

<div class="text-center">
  <%= will_paginate @censor_notices, renderer: BootstrapPagination::Rails %>
</div>
