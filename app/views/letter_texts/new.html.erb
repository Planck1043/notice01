      <%= f.label "标题" %>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label "内容" %>
      <%= f.text_area :text %>
    </p>

    <p>
    <%= f.submit "提交" %>
    </p>

    <%= link_to "返回", letter_texts_path %>
  <% end %>
</div>
