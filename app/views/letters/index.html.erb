<h1> 站内信后台 </h1>
<p>
  <%= link_to "发送站内信", new_letter_text_path %>
</p>

<table class="table table-bordered table-hover">
  <tr class="text-info">
    <th>标题</th>
    <th>内容</th>
    <th>操作</th>
  </tr>

  <% @letters.each do |letter| %>
    <tr>
      <td><%= link_to "#{letter.letter_text.title}", letter_path(letter) %></td>
      <td><%= letter.letter_text.text %></td>
      <td>
        <%#= link_to "编辑", edit_letter_text_path(letter) %>
        <%= link_to "删除", letter_path(letter),
            method: :delete, data: { confirm: "确认删除？" } %>
      </td>
    </tr>
  <% end %>
</table>
