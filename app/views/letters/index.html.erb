<h1 class="text-center"> 站内信后台 </h1>
<p>
  <%= link_to "发送站内信", new_letter_text_path %>
</p>

<table class="table table-bordered table-hover">
  <tr class="text-info">
    <th>标题</th>
    <th>发件人</th>
    <th>收件人</th>
    <th>操作</th>
  </tr>

  <% @letters.each do |letter| %>
    <tr>
      <td><%= link_to "#{letter.letter_text.title}", letter_path(letter) %></td>
      <td><%= user_show_api(letter.sender_id)["name"] %></td>
      <td><%= user_show_api(letter.recever_id)["name"] %></td>
      <td>
        <%= link_to "删除", letter_path(letter),
            method: :delete, data: { confirm: "确认删除？" } %>
      </td>
    </tr>
  <% end %>
</table>

<div class="text-center">
  <%= will_paginate @letters, renderer: BootstrapPagination::Rails %>
</div>
