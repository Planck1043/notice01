<h1 class="text-center"> 通知审核后台 </h1>
<p>
<%= link_to "新建通告", new_notice_path %>
</p>

<p>
<%= link_to "通告审查", censors_path %>
</p>

<table class="table table-bordered table-hover">
  <tr class="text-info">
    <th>标题</th>
    <th>部门</th>
    <th>通知类型</th>
    <th>通知状态</th>
    <th>操作</th>
  </tr>

  <% @notices.each do |f| %>
    <tr>
      <td><%= link_to "#{f.title}", notice_path(f) %></td>
      <td><%= f.notice_item.department %></td>
      <td><%= f.class_type %></td>
      <td><%= link_to "#{f.notice_state}", notice_update_notices_path(f),
            method: :post, :class => "btn btn-xs btn-default"
            # data: { confirm: "确认更新？" },
             %>
          <% if "#{f.notice_state}" == "已发布" %>
            <span style="margin-left: 5px;">|</span>

            <%= link_to "#{f.post_state}", post_update_notices_path(f), method: :post, :class => "btn btn-xs btn-default" %>
          <% else %>
          <% end %>
      </td>
      <td>
        <%= link_to "编辑", edit_notice_path(f) %>
        <%= link_to "删除", notice_path(f),
            method: :delete, data: { confirm: "确认删除？" } %>
      </td>
    </tr>
  <% end %>
</table>

<div class="text-center">
  <%= will_paginate @notices, renderer: BootstrapPagination::Rails %>
</div>
